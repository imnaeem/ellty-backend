{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.graphql",
        "exclude": "**/*.spec.ts",
        "watchAssets": true
      }
    ]
  }
}
